from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

def check_tickets():
    """Check for ticket availability using Selenium."""
    options = webdriver.ChromeOptions()
    options.add_argument("--incognito")

    driver = webdriver.Chrome(options=options)
    driver.get(URL)

    # Wait for CAPTCHA solving
    input("üí° Solve the CAPTCHA in the opened browser, then press Enter...")

    try:
        # Wait for the iframe and switch to it
        WebDriverWait(driver, 15).until(EC.presence_of_element_located((By.TAG_NAME, "iframe")))
        iframe = driver.find_element(By.TAG_NAME, "iframe")
        driver.switch_to.frame(iframe)
        print("‚úÖ Switched to iframe")

        # Look for ticket status inside the iframe
        try:
            ticket_status_element = driver.find_element(By.CLASS_NAME, "wz-event-status gray")  # "Unavailable" text
            ticket_status = ticket_status_element.text.strip()
        except:
            ticket_status = "Unknown"

        print(f"üîç Found ticket status: {ticket_status}")

        # ‚úÖ CORRECT LOGIC: Send a Telegram message only if "Unavailable" is NOT found
        if "Unavailable" in ticket_status:
            print("‚ùå Tickets are still unavailable. No alert sent.")
        else:
            message = f"üöÄ Boom Festival tickets are AVAILABLE! Get them here: {URL}"
            print(message)
            asyncio.run(send_telegram_message(message))

    except Exception as e:
        print("‚ö†Ô∏è Could not check ticket status. Page structure might have changed.")
        print("Error details:", str(e))

    driver.quit()



# Run the check
if __name__ == "__main__":
    check_tickets()
